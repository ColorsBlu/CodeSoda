class Solution:
    def distributeCandies(self, candyType: List[int]) -> int:
        candyType.sort()
        count = 0
        length = len(candyType)
        n = int(length / 2)
        i=0
        while i < length:
            count += 1
            if i!= length-1:
                while candyType[i] == candyType[i + 1]:
                    i += 1
                    if i==length-1:
                        if candyType[i]!=candyType[i-1]:
                            count+=1
                        break
            i += 1

        if count <= n:
            output = count

        else:
            output = n
        return output
            
            
